<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TheBusyShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/dark_grey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/dark_background</item>
    </style>

    <style name="ActionBarParentView">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:paddingTop">?attr/actionBarSize</item>
        <!-- Todo remove to enable scroll behind
        <item name="android:paddingBottom">?attr/actionBarSize</item>
         -->
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    </style>

    <style name="NoActionBarParentView">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">@dimen/sub_heading_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/transparent_black</item>
    </style>

    <style name="TransparentToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">@dimen/sub_heading_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ExpandedAppBarLarge">
        <item name="android:textSize">@dimen/heading_text</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CollapsedAppBarLarge">
        <item name="android:textSize">@dimen/sub_heading_text</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationBar">
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@drawable/navigation_view_colored</item>
        <item name="itemIconTint">@drawable/navigation_view_colored</item>
    </style>

    <style name="BaseTextView">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="HeadingTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/heading_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SubHeadingTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/sub_heading_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="NormalTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="SmallTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#666</item>
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="cart_item_background" parent="SelectableItemBackground">
        <item name="android:background">@color/light_grey_background</item>
    </style>

    <style name="MoreMenuIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="MoreMenuLogo">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="BlackRoundedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_black_button</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LabelButton" parent="SelectableItemBackground">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BackButton" parent="SelectableItemBackground">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="FloatingEditButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/profile_selection_edit_image_size</item>
        <item name="android:layout_height">@dimen/profile_selection_edit_image_size</item>
        <item name="android:layout_margin">@dimen/medium_spacing</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="CollapsedAppBarLargeDark" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/sub_heading_text</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShowPageActionIcons">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="ShowPagePoster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ShowPageChevron">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="ShowPagePlay">
        <item name="android:layout_width">@dimen/show_pages_episode_expanded_play_button_size</item>
        <item name="android:layout_height">@dimen/show_pages_episode_expanded_play_button_size</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">@color/static_page_background</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="tabGravity">center</item>
        <item name="tabSelectedTextColor">@color/light_text</item>
        <item name="tabTextColor">@color/grey_text</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="PlayerBackButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CircularProgressBarTheme">
        <item name="android:layout_width">@dimen/progress_indicator</item>
        <item name="android:layout_height">@dimen/progress_indicator</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:padding">@dimen/medium_spacing</item>
        <item name="cpb_color">@color/black</item>
        <item name="cpb_max_sweep_angle">300</item>
        <item name="cpb_min_sweep_angle">10</item>
        <item name="cpb_rotation_speed">1.0</item>
        <item name="cpb_stroke_width">2dp</item>
        <item name="cpb_sweep_speed">1.0</item>
    </style>

    <style name="Scanner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">@dimen/xlarge_spacing</item>
    </style>

    <style name="BadgeTextView" parent="SmallTextView">
        <item name="android:layout_width">@dimen/badge_size</item>
        <item name="android:layout_height">@dimen/badge_size</item>
        <item name="android:textSize">@dimen/badge_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:background">@drawable/badge_background</item>
        <item name="android:layout_marginTop">@dimen/badge_top_margin</item>
        <item name="android:layout_marginStart">@dimen/small_spacing</item>
        <item name="android:padding">@dimen/badge_padding</item>
    </style>
</resources>